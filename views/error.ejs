<% layout('layout/boilerplate') %>

<style>
    .error-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 20px rgba(0,0,0,0.08);
        padding: 2rem;
        margin: 2rem 0;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }
    .error-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #dc3545, #e35d6a);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
    }
    .error-actions {
        gap: 1rem;
    }
    .error-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-top: 2rem;
        border-left: 4px solid #dc3545;
    }
    .error-code {
        background: #dc3545;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }
    .stack-trace {
        background: #2d3748;
        color: #e2e8f0;
        padding: 1rem;
        border-radius: 8px;
        font-family: 'Courier New', monospace;
        font-size: 0.875rem;
        max-height: 300px;
        overflow-y: auto;
        margin-top: 1rem;
    }
</style>

<div class="error-container" data-environment="<%= typeof nodeEnv !== 'undefined' ? nodeEnv : 'production' %>">
    <!-- Icono y título -->
    <div class="text-center mb-4">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill text-white fs-1"></i>
        </div>
        <h1 class="display-6 fw-bold text-danger mb-3">Oops! Something Went Wrong</h1>
        <p class="lead text-muted">We encountered an unexpected error while processing your request.</p>
    </div>

    <!-- Mensaje de error principal -->
    <div class="alert alert-danger border-0" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-bug-fill me-3 fs-4"></i>
            <div>
                <h4 class="alert-heading mb-2">
                    <span class="error-code me-2">Error</span>
                    <%= err.message %>
                </h4>
                <p class="mb-0">Our team has been notified and we're working to fix this issue.</p>
            </div>
        </div>
    </div>

    <!-- Acciones recomendadas -->
    <div class="text-center mb-4">
        <h5 class="fw-bold text-dark mb-3">What would you like to do?</h5>
        <div class="error-actions d-flex justify-content-center flex-wrap">
            <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg me-3 mb-2">
                <i class="bi bi-arrow-left me-2"></i>Go Back
            </a>
            <a href="/" class="btn btn-primary btn-lg me-3 mb-2">
                <i class="bi bi-house me-2"></i>Go Home
            </a>
            <a href="/campgrounds" class="btn btn-success btn-lg me-3 mb-2">
                <i class="bi bi-map me-2"></i>Browse Campgrounds
            </a>
            <button onclick="location.reload()" class="btn btn-warning btn-lg mb-2">
                <i class="bi bi-arrow-clockwise me-2"></i>Try Again
            </button>
        </div>
    </div>

    <!-- Detalles técnicos (solo en desarrollo) -->
    <% if (process.env.NODE_ENV === 'development') { %>
        <div class="error-details">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="fw-bold text-dark mb-0">
                    <i class="bi bi-terminal me-2"></i>Technical Details
                </h6>
                <small class="text-muted">Development Mode</small>
            </div>
            
            <!-- Información básica del error -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Error Type:</strong> 
                    <code class="text-danger"><%= err.name %></code>
                </div>
                <div class="col-md-6">
                    <strong>Status Code:</strong> 
                    <span class="badge bg-danger"><%= err.status || 500 %></span>
                </div>
            </div>

            <!-- Stack trace -->
            <div>
                <strong>Stack Trace:</strong>
                <pre class="stack-trace mt-2"><%= err.stack %></pre>
            </div>

            <!-- Información adicional -->
            <div class="mt-3">
                <button class="btn btn-sm btn-outline-secondary" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#additionalInfo">
                    <i class="bi bi-info-circle me-1"></i>Show Additional Information
                </button>
                
                <div class="collapse mt-2" id="additionalInfo">
                    <div class="card card-body">
                        <strong>Timestamp:</strong> <span id="errorTimestamp"></span><br>
                        <strong>User Agent:</strong> <span id="userAgent"></span><br>
                        <strong>URL:</strong> <span id="currentUrl"></span>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Mensaje para producción -->
        <div class="alert alert-info text-center border-0">
            <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-shield-check me-2 fs-4"></i>
                <div>
                    <strong>Security Notice</strong>
                    <p class="mb-0 mt-1">Detailed error information is hidden in production for security reasons.</p>
                </div>
            </div>
        </div>
        
        <!-- Error ID para soporte -->
        <div class="text-center mt-3">
            <small class="text-muted">
                Error Reference: <code><%= Date.now() %></code>
            </small>
        </div>
    <% } %>
</div>

<!-- JavaScript PURO sin EJS -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Información del cliente
        const timestampElement = document.getElementById('errorTimestamp');
        const userAgentElement = document.getElementById('userAgent');
        const currentUrlElement = document.getElementById('currentUrl');
        
        if (timestampElement) timestampElement.textContent = new Date().toLocaleString();
        if (userAgentElement) userAgentElement.textContent = navigator.userAgent;
        if (currentUrlElement) currentUrlElement.textContent = window.location.href;
        
        // Detectar modo desarrollo
        const errorContainer = document.querySelector('.error-container');
        const isDevelopment = errorContainer ? errorContainer.dataset.environment === 'development' : false;
        
        // Comportamiento específico de desarrollo
        if (isDevelopment) {
            setTimeout(() => {
                const errorDetails = document.querySelector('.error-details');
                if (errorDetails) {
                    errorDetails.scrollIntoView({ 
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }, 1000);
        }
    });
</script>