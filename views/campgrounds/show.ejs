<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

<style>
    .showpage-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 20px rgba(0,0,0,0.08);
        padding: 2rem;
        margin: 1rem 0;
    }
    .campground-card {
        border: none;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        border-radius: 12px;
        overflow: hidden;
    }
    .info-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="showpage-container">
    <div class="row">
        <!-- Columna izquierda -->
        <div class="col-lg-6">
            <!-- Carousel mejorado -->
            <div class="info-section">
                <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-3">
                        <% if (campground.images && campground.images.length> 0) { %>
                            <% campground.images.forEach((img, i)=> { %>
                                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                    <img class="d-block w-100" src="<%= img.card || img.url %>"
                                        alt="Campground image <%= i + 1 %>"
                                        style="height: 320px; object-fit: cover;">
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="carousel-item active">
                                <img class="d-block w-100"
                                    src="https://via.placeholder.com/600x320/6c757d/ffffff?text=No+Images+Available"
                                    alt="No images"
                                    style="height: 320px; object-fit: cover;">
                            </div>
                        <% } %>
                    </div>
                    
                    <% if(campground.images && campground.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    <% } %>
                </div>
            </div>

            <!-- Card de información mejorada -->
            <div class="campground-card">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-3">
                        <i class="bi bi-tree-fill"></i> <%= campground.title %>
                    </h4>
                    <p class="card-text lead"><%= campground.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-geo-alt-fill text-muted me-2"></i>
                        <span class="text-muted"><%= campground.location %></span>
                    </li>
                    <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-person-fill text-muted me-2"></i>
                        <span>Submitted by <strong><%= campground.author.username %></strong></span>
                    </li>
                    <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-currency-euro text-muted me-2"></i>
                        <span class="fs-5 text-success fw-bold"><%= campground.price %>€/night</span>
                    </li>
                </ul>
                
                <% if (currentUser && campground.author.equals(currentUser._id)) { %>
                    <div class="card-body border-top">
                        <div class="btn-group w-100">
                            <a class="btn btn-outline-primary" href="/campgrounds/<%=campground._id%>/edit">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form class="d-inline w-50" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-outline-danger w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% } %>
                
                <div class="card-footer text-muted bg-light">
                    <small><i class="bi bi-clock"></i> Posted 2 days ago</small>
                </div>
            </div>
        </div>

        <!-- Columna derecha -->
        <div class="col-lg-6">
            <!-- Mapa mejorado -->
            <div class="info-section">
                <div class="mb-3" style="margin-top: -30px;">
                    <h5 class="mb-3 d-flex align-items-center">
                        <i class="bi bi-map-fill text-primary me-2"></i>Ubicación
                    </h5>
                    <div id='map' style='width: 100%; height: 300px; border-radius: 10px; border: 2px solid #e9ecef;'></div>
                </div>
            </div>

            <!-- Reviews mejoradas -->
            <div class="info-section">
                <% if(currentUser) { %>
                    <h4 class="mb-4 d-flex align-items-center">
                        <i class="bi bi-chat-dots-fill text-success me-2"></i>Leave a Review
                    </h4>
                    <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="validated-form" novalidate>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Rating</label>
                            <fieldset class="starability-basic">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold" for="body">Your Review</label>
                            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" 
                                      placeholder="Share your experience..." required></textarea>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <button class="btn btn-success btn-lg w-100">
                            <i class="bi bi-send-fill"></i> Submit Review
                        </button>
                    </form>
                <% } %>
            </div>

            <!-- Reviews existentes mejoradas -->
            <div class="info-section">
                <h4 class="mb-4 d-flex align-items-center">
                    <i class="bi bi-star-fill text-warning me-2"></i>Reviews
                    <span class="badge bg-primary ms-2"><%= campground.reviews.length %></span>
                </h4>
                
                <% if(campground.reviews.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-chat-square-text display-4"></i>
                        <p class="mt-3">No reviews yet. Be the first to share your experience!</p>
                    </div>
                <% } else { %>
                    <% for(let review of campground.reviews) { %>
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title mb-0">
                                        <i class="bi bi-person-circle text-primary"></i> 
                                        <%= review.author.username %>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> 2 days ago
                                    </small>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="starability-result" data-rating="<%= review.rating %>">
                                        Rated: <%= review.rating %>/5 stars
                                    </p>
                                </div>
                                
                                <p class="card-text"><%= review.body %></p>
                                
                                <% if (currentUser && review.author.equals(currentUser._id)) { %>
                                    <div class="mt-3">
                                        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                            <button class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete Review
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script id="campground-data" type="application/json">
    <%- JSON.stringify(campground) %>
</script>
<script>
    const campground = JSON.parse(document.getElementById('campground-data').textContent);
</script>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
</script>
<script src="/javascripts/showPageMap.js"></script>